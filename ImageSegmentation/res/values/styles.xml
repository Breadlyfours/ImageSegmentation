<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="menuPictureIcon">@drawable/ic_action_new_picture_light</item>
        <item name="menuDrawModeIcon">@drawable/ic_action_edit_light</item>
        <item name="menuClearDrawIcon">@drawable/ic_action_remove_light</item>
        <item name="menuDrawModeIconRed">@drawable/ic_action_edit_red</item>
        <item name="menuPickColorIcon">@drawable/ic_action_choose_color</item>
        <item name="menuStartSegmentationIcon">@drawable/ic_action_accept_light</item>
        <item name="menuForegroundIcon">@drawable/ic_action_foreground_light</item>
        <item name="menuBackgroundIcon">@drawable/ic_action_background_light</item>
        <item name="menuSavePictureIcon">@drawable/ic_action_save_light</item>
        <item name="menuLoadScribblesIcon">@drawable/ic_action_sd_storage_light</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
